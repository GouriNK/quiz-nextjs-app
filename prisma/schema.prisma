generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model MasterData {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  label String
  type  String
  value String
  questions Question[]
}

model Question {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  correctAnswer String
  domainId      String    @db.ObjectId
  explanation   String
  options       String[]
  questionText  String
  domain        MasterData   @relation(fields: [domainId], references: [id])
}
